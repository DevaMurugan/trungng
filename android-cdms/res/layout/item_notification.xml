<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
  
  <!-- A small icon like the Facebook app -->
  <ImageView
  	android:id="@+id/icon_notification"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:minWidth="50dip"
  	android:layout_weight="0.1" />
  
  <LinearLayout
  	android:orientation="vertical"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_weight="0.9">
  	
  	<!-- Name and the type of notification -->
  	<LinearLayout
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content">
  		<TextView
  			android:id="@+id/txt_notification_sender"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:padding="5dip"
  			style="@style/TextPerson"/>
  		<TextView
  			android:id="@+id/txt_notification_content"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content" />
  	</LinearLayout>
  	
  	<!-- Time of the notification -->
  	<TextView
  		android:id="@+id/txt_notification_time"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:padding="5dip" />
  		
  	<!-- Action buttons -->
  	<LinearLayout
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:padding="5dip">
  		<edu.kaist.cs408.cdms.widget.DontPressWithParentTextView
  			style="android:style/TextAppearance_Widget_Button"
  			android:id="@+id/btn_notification_first"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:visibility="gone"
  			android:background="@drawable/bg_inline_text"
				android:clickable="true"  			
  			android:onClick="buttonClick" />
  		<edu.kaist.cs408.cdms.widget.DontPressWithParentTextView
  			style="android:style/Widget_Button_Small"
  			android:id="@+id/btn_notification_second"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_marginLeft="15dip"
  			android:visibility="gone"
  			android:background="@drawable/bg_inline_text"
  			android:clickable="true"
  			android:onClick="buttonClick" />
  	</LinearLayout>
  </LinearLayout>
</LinearLayout>
